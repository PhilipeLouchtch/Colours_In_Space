<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Properties="clr-namespace:ColoursInSpace.Properties" x:Class="ColoursInSpace.Window1"
        Title="Window1" Height="395" Width="608">
    <Grid>
        <GroupBox x:Name="ImagePreviewGroup" Header="Amount of Targets" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="254" Width="254" >
            <Grid Margin="0,-14,-2,-12">
                <Image x:Name="PreviewImagebox" Height="168" Width="224" Margin="10,20,10,80"/>
                <Slider Margin="10,200,10,0" VerticalAlignment="Top" TickPlacement="TopLeft" TickFrequency="2" SmallChange="2" Cursor="Arrow" Maximum="7" Minimum="3" LargeChange="2" Value="3" Background="{x:Null}" AutoToolTipPlacement="TopLeft" IsSnapToTickEnabled="True" Height="28"/>
                <CheckBox x:Name="Zoom" Content="Zoom" HorizontalAlignment="Left" Margin="10,228,0,0" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
        <Slider HorizontalAlignment="Left" Margin="289,26,0,0" VerticalAlignment="Top" Width="181" Value="50" SmallChange="1" TickFrequency="5" LargeChange="25" Maximum="100" AutoToolTipPlacement="TopLeft"/>
        <Label x:Name="Vol_Label" Content="Volume" HorizontalAlignment="Left" Margin="490,19,0,0" VerticalAlignment="Top" Width="64"/>

    </Grid>
</Window>
