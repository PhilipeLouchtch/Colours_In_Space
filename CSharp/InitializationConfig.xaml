<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Properties="clr-namespace:ColoursInSpace.Properties" x:Name="ConfigWindow" x:Class="ColoursInSpace.InitConfigWindow"
        Title="Colours In Space Initial Configuration Window" Height="386" Width="477" ResizeMode="NoResize" WindowStyle="ToolWindow" Loaded="WindowLoaded" Closing="WindowClosing">
    <Grid Height="358" VerticalAlignment="Top" Margin="0,0,0,-3">
        <GroupBox x:Name="ImagePreviewGroup" Header="Detection settings" HorizontalAlignment="Left" Margin="10,10,0,0" Width="250" ClipToBounds="True" SnapsToDevicePixels="True" Height="335" VerticalAlignment="Top" >
            <Grid Margin="0,-14,-2,-12" ClipToBounds="True" SnapsToDevicePixels="True" Height="339" VerticalAlignment="Top">
                <Image x:Name="PreviewImagebox" Margin="10,22,10,0" Height="136" VerticalAlignment="Top" ClipToBounds="True" SnapsToDevicePixels="True"/>
                <GroupBox x:Name="ModeParameters" Header="Mode Parameters" Margin="0,226,0,0" ClipToBounds="True" SnapsToDevicePixels="True" Height="103" VerticalAlignment="Top">
                    <Grid Margin="0,0,-2,-12" IsHitTestVisible="True" ClipToBounds="True" SnapsToDevicePixels="True">
                        <RadioButton x:Name="SonarMode" Content="Distance (Sonar mode)" Margin="8,60,73,16" ClipToBounds="True" SnapsToDevicePixels="True"/>
                        <RadioButton x:Name="ColourMode" Content="Colour (Colour-only mode)" Margin="8,34,52,41" ClipToBounds="True" SnapsToDevicePixels="True"/>
                        <RadioButton x:Name="NormalMode" Content="Colour + Distance (Normal mode)" Margin="8,10,19,66" ClipToBounds="True" SnapsToDevicePixels="True"/>
                    </Grid>
                </GroupBox>
                <Label x:Name="Label3" Content="3" HorizontalAlignment="Left" Margin="10,203,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="22" Width="15" ClipToBounds="True" SnapsToDevicePixels="True">
                    <Label.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform X="-2"/>
                        </TransformGroup>
                    </Label.RenderTransform>
                </Label>
                <Label x:Name="Label3_Copy" Content="5" HorizontalAlignment="Left" Margin="115,203,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="22" Width="15" ClipToBounds="True" SnapsToDevicePixels="True">
                    <Label.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform X="-2"/>
                        </TransformGroup>
                    </Label.RenderTransform>
                </Label>
                <Label x:Name="Label3_Copy1" Content="7" HorizontalAlignment="Left" Margin="218,203,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="22" Width="15" ClipToBounds="True" SnapsToDevicePixels="True">
                    <Label.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform X="-2"/>
                        </TransformGroup>
                    </Label.RenderTransform>
                </Label>
                <Label Content="Amount of target boxes:" HorizontalAlignment="Right" Margin="0,163,106,0" VerticalAlignment="Top" ClipToBounds="True" SnapsToDevicePixels="True" Height="28"/>
                <CheckBox x:Name="Zoom" Content="Zoom" Margin="176,169,15,0" Checked="Zoom_Checked" Unchecked="Zoom_Checked" ClipToBounds="True" SnapsToDevicePixels="True" Height="17" VerticalAlignment="Top"/>
                <Slider x:Name="boxSelector" Margin="10,182,10,0" TickPlacement="BottomRight" TickFrequency="2" SmallChange="2" Cursor="Arrow" Maximum="7" Minimum="3" LargeChange="2" Value="3" Background="{x:Null}" IsSnapToTickEnabled="True" ClipToBounds="True" SnapsToDevicePixels="True" Height="27" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
        <Slider HorizontalAlignment="Left" Margin="274,31,0,0" VerticalAlignment="Top" Width="181" Value="50" SmallChange="1" TickFrequency="5" LargeChange="25" Maximum="100" AutoToolTipPlacement="TopLeft" ClipToBounds="True" SnapsToDevicePixels="True"/>
        <Label x:Name="Vol_Label" Content="Volume" HorizontalAlignment="Left" Margin="269,10,0,0" VerticalAlignment="Top" Width="64" ClipToBounds="True" SnapsToDevicePixels="True"/>
        <ComboBox HorizontalAlignment="Left" Margin="274,79,0,0" VerticalAlignment="Top" Width="181" ClipToBounds="True" SnapsToDevicePixels="True"/>
        <Label x:Name="Filter_Label" Content="Filter" HorizontalAlignment="Left" Margin="269,54,0,0" VerticalAlignment="Top" Width="64" ClipToBounds="True" SnapsToDevicePixels="True"/>
        <Button x:Name="startToggle" Content="Fire up the Kinect!" HorizontalAlignment="Left" Margin="274,296,0,0" VerticalAlignment="Top" Width="181" Height="49" ClipToBounds="True" SnapsToDevicePixels="True" Click="startToggle_Click"/>

    </Grid>
</Window>
