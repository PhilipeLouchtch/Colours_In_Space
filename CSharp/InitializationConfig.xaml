<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Properties="clr-namespace:ColoursInSpace.Properties" x:Class="ColoursInSpace.Window1"
        Title="Colours In Space Initial Configuration Window" Height="386" Width="490" ResizeMode="NoResize">
    <Grid>
        <GroupBox x:Name="ImagePreviewGroup" Header="Amount of Targets" HorizontalAlignment="Left" Margin="10,10,0,10" Width="241" >
            <Grid Margin="0,-14,-2,-12">
                <Image x:Name="PreviewImagebox" Margin="10,22,10,0" Height="136" VerticalAlignment="Top"/>
                <Slider Margin="10,0,10,140" VerticalAlignment="Bottom" TickPlacement="TopLeft" TickFrequency="2" SmallChange="2" Cursor="Arrow" Maximum="7" Minimum="3" LargeChange="2" Value="3" Background="{x:Null}" AutoToolTipPlacement="TopLeft" IsSnapToTickEnabled="True" Height="28"/>
                <CheckBox x:Name="Zoom" Content="Zoom" HorizontalAlignment="Left" Margin="10,0,0,113" VerticalAlignment="Bottom"/>
                <GroupBox x:Name="ModeParameters" Header="Mode Parameters" Margin="10,228,10,0" Height="88" VerticalAlignment="Top">
                    <Grid Margin="0,0,-2,-12" IsHitTestVisible="True">
                        <RadioButton x:Name="NormalMode" Content="Colour + Distance (Normal mode)" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                        <RadioButton x:Name="ColourMode" Content="Colour (Colour-only mode)" HorizontalAlignment="Left" Margin="10,29,0,0" VerticalAlignment="Top"/>
                        <RadioButton x:Name="SonarMode" Content="Distance (Sonar mode)" HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>
        <Slider HorizontalAlignment="Left" Margin="274,31,0,0" VerticalAlignment="Top" Width="181" Value="50" SmallChange="1" TickFrequency="5" LargeChange="25" Maximum="100" AutoToolTipPlacement="TopLeft"/>
        <Label x:Name="Vol_Label" Content="Volume" HorizontalAlignment="Left" Margin="274,6,0,0" VerticalAlignment="Top" Width="64"/>
        <ComboBox HorizontalAlignment="Left" Margin="274,79,0,0" VerticalAlignment="Top" Width="181"/>
        <Label x:Name="Filter_Label" Content="Filter" HorizontalAlignment="Left" Margin="274,49,0,0" VerticalAlignment="Top" Width="64"/>
        <Button x:Name="Done" Content="Fire up the Kinect!" HorizontalAlignment="Left" Margin="274,290,0,0" VerticalAlignment="Top" Width="181" Height="49"/>

    </Grid>
</Window>
